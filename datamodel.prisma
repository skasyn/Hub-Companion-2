type User {
  id: ID! @id
  name: String!
  email: String! @unique
  token: String! @unique
  year: Int @default(value: 0)
  plan: Int @default(value: -1)
  acculturation: Int @default(value: 0)
  experimentation: Int @default(value: 0)
  fruition: Int @default(value: 0)
  sharing: Int @default(value: 0)
  privilege: Int @default(value: 0)
  activities: [Activity!]! @relation(name: "AllActivities", link: INLINE)
}
type Activity {
    id: ID! @id
    code: String! @unique
    type: String!
    investment_type: String
    investment_points: Int
    title: String!
    description: String
    date: DateTime
    registered: [User!]! @relation(name: "AllActivities")
}

