type User {
  id: ID! @id
  name: String!
  email: String! @unique
  token: String! @unique
  year: Int @default(value: 0)
  plan: Int @default(value: -1)
  xp: Int @default(value: 0)
  privilege: Int @default(value: 0)
  activities: [Activity!]! @relation(name: "AllActivities", link: INLINE)
}
type Activity {
    id: ID! @id
    code: String! @unique
    type: String!
    xp: Int @default(value: 0)
    title: String!
    description: String
    date: DateTime
    registered: [User!]! @relation(name: "AllActivities")
}