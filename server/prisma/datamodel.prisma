type User {
  id: ID! @id
  outlookId: String! @unique
  name: String!
  email: String! @unique
  year: Int @default(value: 0)
  plan: Int @default(value: -1)
  privilege: Int @default(value: 0)
  activities: [UserPresence!]! @relation(name: "PresenceUser", link: INLINE)
}

type Activity {
    id: ID! @id
    code: String! @unique
    type: String!
    xp: Int @default(value: 0)
    title: String!
    description: String!
    begin: DateTime!
    end: DateTime!
    registered: [UserPresence!]! @relation(name: "PresenceActivity", link: INLINE)
}

type UserPresence {
    id: ID! @id
    code: String! @unique
    user: User! @relation(name: "PresenceUser")
    activity: Activity! @relation(name: "PresenceActivity")
    presence: Boolean!
    xp: Int!
}

type Maker {
    id: ID! @id
    title: String!
    co_workers: [String!]!
    description: String!
    functionalities: String!
    technologies: String!
    delivery: String!
    organisation: String!
    resources: String!
    informations: String!
    status: Int!
}

type Sharing {
    id: ID! @id
    title: String! @unique
    co_workers: [String!]!
    description: String!
    date: DateTime!
    status: Int!
}

type DatabaseRefresh {
    id: ID! @id
    date: DateTime!
}